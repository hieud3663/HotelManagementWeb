@model IEnumerable<HotelManagement.Models.ReservationForm>

@{
    ViewData["Title"] = "Check-in";
}

<!-- Page Header -->
<div class="page-header fade-in-up">
    <h1>
        <i class="fas fa-sign-in-alt"></i>
        Quản lý Check-in
    </h1>
    <p>Danh sách các phiếu đặt phòng đã được xác nhận và chờ khách đến nhận phòng</p>
</div>

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show fade-in-up" role="alert">
        <i class="fas fa-check-circle me-2"></i>@Html.Raw(TempData["Success"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show fade-in-up" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show fade-in-up" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Main Content -->
<div class="card-modern fade-in-up">
    <div class="card-header-modern d-flex justify-content-between align-items-center">
        <span><i class="fas fa-clipboard-list me-2"></i>Danh sách Chờ Check-in</span>
        <span class="badge-modern badge-info-modern">
            <i class="fas fa-list"></i> @Model.Count() phòng
        </span>
    </div>
    <div class="card-body-modern">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="stats-icon info mx-auto mb-4">
                    <i class="fas fa-inbox"></i>
                </div>
                <h4 class="text-muted mb-3">Không có phòng chờ check-in</h4>
                <p class="text-muted">Hiện tại không có đặt phòng nào đang chờ check-in</p>
                <a href="@Url.Action("Index", "Reservation")" class="btn btn-primary-modern mt-3">
                    <i class="fas fa-calendar-plus"></i> Tạo đặt phòng mới
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table-modern mb-0">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag"></i> Mã ĐP</th>
                            <th><i class="fas fa-user"></i> Khách hàng</th>
                            <th><i class="fas fa-door-open"></i> Phòng</th>
                            <th><i class="fas fa-tag"></i> Loại phòng</th>
                            <th><i class="fas fa-sign-in-alt"></i> Check-in</th>
                            <th><i class="fas fa-sign-out-alt"></i> Check-out</th>
                            <th><i class="fas fa-money-bill"></i> Tiền cọc</th>
                            <th><i class="fas fa-cog"></i> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isOverdue = ViewBag.OverdueReservations != null && 
                                           ((HashSet<string>)ViewBag.OverdueReservations).Contains(item.ReservationFormID ?? "");
                            var rowClass = isOverdue ? "table-danger" : "";
                            
                            <tr class="@rowClass" data-reservation-id="@item.ReservationFormID">
                                <td>
                                    <strong class="text-primary">#@item.ReservationFormID</strong>
                                    @if (isOverdue)
                                    {
                                        <br />
                                        <span class="badge bg-danger mt-1">
                                            <i class="fas fa-exclamation-triangle"></i> Quá hạn
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <strong>@item.Customer?.FullName</strong>
                                        <br />
                                        <small class="text-muted">
                                            <i class="fas fa-phone"></i> @item.Customer?.PhoneNumber
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge-modern badge-info-modern">
                                        <i class="fas fa-bed"></i> @item.RoomID
                                    </span>
                                </td>
                                <td>@item.Room?.RoomCategory?.RoomCategoryName</td>
                                <td>
                                    <div>
                                        <strong>@item.CheckInDate.ToString("dd/MM/yyyy")</strong>
                                        <br />
                                        <small class="text-muted">@item.CheckInDate.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>@item.CheckOutDate.ToString("dd/MM/yyyy")</strong>
                                        <br />
                                        <small class="text-muted">@item.CheckOutDate.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td>
                                    <strong class="text-success">@item.RoomBookingDeposit.ToString("N0")</strong>
                                    <small class="text-muted d-block">VNĐ</small>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <form asp-action="CheckIn" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="reservationFormID" value="@item.ReservationFormID" />
                                            <button type="submit" 
                                                    class="btn btn-success-modern btn-sm" 
                                                    onclick="return confirm('Xác nhận check-in cho khách @item.Customer?.FullName?');"
                                                    @(isOverdue ? "disabled" : "")>
                                                <i class="fas fa-check"></i> Check-in
                                            </button>
                                        </form>
                                        <a asp-controller="Reservation" asp-action="Details" asp-route-id="@item.ReservationFormID" 
                                           class="btn btn-info-modern btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="ConfirmationReceipt" asp-action="PrintReservation" asp-route-reservationId="@item.ReservationFormID" 
                                           class="btn btn-warning-modern btn-sm" title="In phiếu xác nhận" target="_blank">
                                            <i class="fas fa-receipt"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.ReservationFormID" method="post" class="d-inline" 
                                              onsubmit="return confirm('Bạn có chắc muốn xóa phiếu đặt phòng này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger-modern btn-sm" title="Xóa đặt phòng">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Script đơn giản cho check-in
        $(document).ready(function() {
            console.log('Check-in page loaded');
        });
    </script>
}
<!-- Quick Actions -->
<div class="row g-3 mt-3">
    <div class="col-md-6">
        <a asp-action="CheckedInList" class="btn btn-primary-modern w-100 py-3">
            <i class="fas fa-list me-2"></i>
            Xem danh sách đã check-in
        </a>
    </div>
    <div class="col-md-6">
        <a asp-controller="Reservation" asp-action="Index" class="btn btn-info-modern w-100 py-3">
            <i class="fas fa-calendar-alt me-2"></i>
            Quản lý đặt phòng
        </a>
    </div>
</div>
