@model HotelManagement.Models.ReservationForm

@{
    ViewData["Title"] = "Chi tiết Check-out";
    var checkin = Model.HistoryCheckin;
    var reservation = Model;
    var services = Model.RoomUsageServices;
}

<!-- Page Header -->
<div class="page-header fade-in-up">
    <h1>
        <i class="fas fa-cash-register"></i>
        Thanh toán & Trả phòng
    </h1>
    <p>Phiếu đặt phòng #@reservation.ReservationFormID</p>
</div>

<div class="row g-4">
    <!-- Customer & Room Info -->
    <div class="col-lg-6">
        <div class="card-modern fade-in-up">
            <div class="card-header-modern">
                <i class="fas fa-user me-2"></i>Thông tin Khách hàng
            </div>
            <div class="card-body-modern">
                <table class="table table-borderless mb-0">
                    <tr>
                        <th width="40%"><i class="fas fa-user"></i> Họ tên:</th>
                        <td><strong>@reservation.Customer?.FullName</strong></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-phone"></i> Điện thoại:</th>
                        <td>@reservation.Customer?.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-id-card"></i> CMND/CCCD:</th>
                        <td>@reservation.Customer?.IdCardNumber</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-envelope"></i> Email:</th>
                        <td>@reservation.Customer?.Email</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card-modern fade-in-up" style="animation-delay: 0.1s">
            <div class="card-header-modern">
                <i class="fas fa-door-open me-2"></i>Thông tin Phòng
            </div>
            <div class="card-body-modern">
                <table class="table table-borderless mb-0">
                    <tr>
                        <th width="40%"><i class="fas fa-bed"></i> Số phòng:</th>
                        <td><span class="badge-modern badge-info-modern">@reservation.RoomID</span></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-tag"></i> Loại phòng:</th>
                        <td>@reservation.Room?.RoomCategory?.RoomCategoryName</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-sign-in-alt"></i> Check-in:</th>
                        <td><strong class="text-success">@(checkin?.CheckInDate.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</strong></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-calendar"></i> Check-out dự kiến:</th>
                        <td>@reservation.CheckOutDate.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-clock"></i> Thời gian hiện tại:</th>
                        <td>
                            <strong class="text-primary" id="currentTime">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</strong>
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-hourglass-half"></i> Thời gian ở thực tế:</th>
                        <td>
                            <strong class="text-info" id="actualDuration">
                                <span id="timeValue">@ViewBag.ActualDuration</span> 
                                <span id="timeUnit">@(ViewBag.PriceUnit == "DAY" ? "ngày" : "giờ")</span>
                            </strong>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <!-- Services Used -->
    <div class="col-12">
        <div class="card-modern fade-in-up" style="animation-delay: 0.2s">
            <div class="card-header-modern">
                <i class="fas fa-concierge-bell me-2"></i>Dịch vụ đã sử dụng
            </div>
            <div class="card-body-modern">
                @if (services != null && services.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Dịch vụ</th>
                                    <th>Loại</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (services != null)
                                {
                                    foreach (var service in services)
                                    {
                                        var servicePrice = service.HotelService?.ServicePrice ?? 0;
                                        var totalPrice = service.Quantity * servicePrice;
                                        
                                        <tr>
                                            <td><strong>@(service.HotelService?.ServiceName ?? "N/A")</strong></td>
                                            <td>@(service.HotelService?.ServiceCategory?.ServiceCategoryName ?? "N/A")</td>
                                            <td><span class="badge-modern badge-info-modern">@service.Quantity</span></td>
                                            <td>@servicePrice.ToString("N0") VNĐ</td>
                                            <td class="text-end">
                                                <strong class="text-success">
                                                    @totalPrice.ToString("N0") VNĐ
                                                </strong>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-inbox fa-2x mb-2"></i>
                        <p>Không có dịch vụ nào được sử dụng</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Invoice Summary -->
    <div class="col-lg-8">
        <div class="card-modern fade-in-up" style="animation-delay: 0.3s">
            <div class="card-header-modern">
                <i class="fas fa-file-invoice-dollar me-2"></i>Chi tiết Hóa đơn
            </div>
            <div class="card-body-modern">
                <table class="table table-borderless">
                    <tr>
                        <th>Đơn giá phòng:</th>
                        <td class="text-end">
                            <strong>@ViewBag.UnitPrice.ToString("N0") VNĐ/@(ViewBag.PriceUnit == "DAY" ? "ngày" : "giờ")</strong>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Thời gian ở thực tế 
                            (<span id="displayTimeUnits">@ViewBag.TimeUnits</span> @(ViewBag.PriceUnit == "DAY" ? "ngày" : "giờ")):
                        </th>
                        <td class="text-end"><strong id="roomChargeDisplay">@ViewBag.RoomCharge.ToString("N0") VNĐ</strong></td>
                    </tr>
                    <tr>
                        <th>Tiền dịch vụ:</th>
                        <td class="text-end"><strong id="serviceChargeDisplay">@ViewBag.ServiceCharge.ToString("N0") VNĐ</strong></td>
                    </tr>
                    <tr>
                        <th>Tổng trước thuế:</th>
                        <td class="text-end"><strong id="subTotalDisplay">@ViewBag.SubTotal.ToString("N0") VNĐ</strong></td>
                    </tr>
                    <tr>
                        <th>Thuế VAT (10%):</th>
                        <td class="text-end"><strong id="taxAmountDisplay">@ViewBag.TaxAmount.ToString("N0") VNĐ</strong></td>
                    </tr>
                    <tr class="border-top">
                        <th class="h5">Tổng cộng:</th>
                        <td class="text-end">
                            <h4 class="text-primary mb-0" id="totalAmountDisplay">@ViewBag.TotalAmount.ToString("N0") VNĐ</h4>
                        </td>
                    </tr>
                    <tr class="border-top">
                        <th>Tiền cọc đã đặt:</th>
                        <td class="text-end"><strong class="text-success">-@reservation.RoomBookingDeposit.ToString("N0") VNĐ</strong></td>
                    </tr>
                    <tr class="bg-light">
                        <th class="h4 text-danger">Còn phải thanh toán:</th>
                        <td class="text-end">
                            <h3 class="text-danger mb-0" id="amountDueDisplay">@ViewBag.AmountDue.ToString("N0") VNĐ</h3>
                        </td>
                    </tr>
                </table>

                <div class="alert-modern alert-info-modern mt-3">
                    <i class="fas fa-info-circle"></i>
                    <small>
                        Tiền phòng tính từ lúc nhận phòng thực tế 
                        (@ViewBag.ActualCheckInDate.ToString("dd/MM/yyyy HH:mm")) đến hiện tại.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Form -->
    <div class="col-lg-4">
        <div class="card-modern fade-in-up" style="animation-delay: 0.4s">
            <div class="card-header-modern bg-warning text-white">
                <i class="fas fa-cash-register me-2"></i>Lựa chọn hình thức
            </div>
            <div class="card-body-modern">
                <div class="alert-modern alert-info-modern mb-3">
                    <i class="fas fa-info-circle"></i>
                    <small><strong>Lưu ý:</strong> Chọn hình thức phù hợp</small>
                </div>

                @* Option 1: Trả phòng và Thanh toán sau (tính theo THỜI GIAN THỰC TẾ) *@
                <div class="card mb-3" style="border: 2px solid #ffc107;">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-sign-out-alt text-warning"></i> 
                            <strong>1. Trả phòng & Thanh toán</strong>
                        </h6>
                        <ul class="small mb-3">
                            <li>Tính từ <strong>check-in THỰC TẾ đến HIỆN TẠI</strong></li>
                            <li>Chuyển sang trang thanh toán</li>
                        </ul>
                        <form asp-action="CheckoutThenPay" method="post" id="checkoutThenPayForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="reservationFormID" value="@reservation.ReservationFormID" />
                            <button type="button"
                                    class="btn btn-warning-modern w-100"
                                    id="checkoutThenPayBtn"
                                    data-invoice-id="@(ViewBag.NewInvoiceID ?? 0)"
                                    data-amount="@(ViewBag.AmountDue?.ToString("N0") ?? "0")">
                                <i class="fas fa-sign-out-alt"></i> Trả phòng ngay & Thanh toán
                            </button>
                        </form>
                    </div>
                </div>
                
                @* @if (ViewBag.ExistingInvoice == null) *@
                        
                @if (false)
                {
                    @* Option 2: Thanh toán trước (tính theo THỜI GIAN DỰ KIẾN) *@
                    @* <div class="card" style="border: 2px solid #28a745;">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-money-bill-wave text-success"></i> 
                                <strong>Lựa chọn 2: Thanh toán trước</strong>
                            </h6>
                            <ul class="small mb-3">
                                <li>Thanh toán ngay → Tạo hóa đơn</li>
                                <li>Tính từ <strong>check-in THỰC TẾ đến checkout DỰ KIẾN</strong></li>
                                <li>Khách ở tiếp đến giờ checkout dự kiến</li>
                                <li>Checkout muộn → Tính lại theo thời gian thực tế (không phí riêng)</li>
                            </ul>
                            <button type="button" class="btn btn-success-modern w-100" 
                                    data-bs-toggle="modal" data-bs-target="#prepaymentModal">
                                <i class="fas fa-money-bill-wave"></i> Thanh toán trước
                            </button>
                        </div>
                    </div> *@
                }

                <a asp-action="Index" class="btn btn-secondary-modern w-100 mt-3">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

@* Modal thanh toán trước *@
<div class="modal fade" id="prepaymentModal" tabindex="-1" aria-labelledby="prepaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="prepaymentModalLabel">
                    <i class="fas fa-money-bill-wave"></i> Thanh toán trước
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="PayThenCheckout" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="reservationFormID" value="@reservation.ReservationFormID" />
                    
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> Thanh toán theo thời gian dự kiến:</h6>
                        <ul class="mb-0">
                            <li>Check-in thực tế: <strong>@(checkin?.CheckInDate.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</strong></li>
                            <li>Check-out DK: <strong>@reservation.CheckOutDate.ToString("dd/MM/yyyy HH:mm")</strong></li>
                            <li>Thời gian: <strong>@ViewBag.ExpectedTimeUnits @(ViewBag.PriceUnit == "DAY" ? "ngày" : "giờ")</strong></li>
                            <li>Tiền phòng: <strong>@ViewBag.ExpectedRoomCharge.ToString("N0") VNĐ</strong></li>
                            <li>Tiền dịch vụ: <strong>@ViewBag.ServiceCharge.ToString("N0") VNĐ</strong></li>
                            <li><strong class="text-warning">Nếu checkout muộn:</strong> Hệ thống sẽ tính lại tiền phòng dựa trên thời gian ở thực tế</li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-credit-card"></i> Phương thức thanh toán <span class="text-danger">*</span>
                        </label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="CASH" id="cash" checked required>
                            <label class="form-check-label" for="cash">
                                <i class="fas fa-money-bill-wave text-success"></i> Tiền mặt
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="CARD" id="card" required>
                            <label class="form-check-label" for="card">
                                <i class="fas fa-credit-card text-primary"></i> Thẻ
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" value="TRANSFER" id="transfer" required>
                            <label class="form-check-label" for="transfer">
                                <i class="fas fa-exchange-alt text-info"></i> Chuyển khoản
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-success">
                        <strong><i class="fas fa-calculator"></i> Chi tiết thanh toán:</strong>
                        <table class="table table-sm table-borderless mb-0 mt-2">
                            <tr>
                                <td>Tiền phòng (dự kiến):</td>
                                <td class="text-end"><strong>@ViewBag.ExpectedRoomCharge.ToString("N0") VNĐ</strong></td>
                            </tr>
                            <tr>
                                <td>Tiền dịch vụ:</td>
                                <td class="text-end"><strong>@ViewBag.ServiceCharge.ToString("N0") VNĐ</strong></td>
                            </tr>
                            <tr>
                                <td>Tạm tính:</td>
                                <td class="text-end"><strong>@ViewBag.ExpectedSubTotal.ToString("N0") VNĐ</strong></td>
                            </tr>
                            <tr>
                                <td>VAT (10%):</td>
                                <td class="text-end"><strong>@ViewBag.ExpectedTaxAmount.ToString("N0") VNĐ</strong></td>
                            </tr>
                            <tr>
                                <td>Tiền đặt cọc:</td>
                                <td class="text-end text-success"><strong>-@ViewBag.Deposit.ToString("N0") VNĐ</strong></td>
                            </tr>
                            <tr class="border-top">
                                <td><strong>TỔNG CỘNG:</strong></td>
                                <td class="text-end"><h5 class="text-danger mb-0">@ViewBag.ExpectedAmountDue.ToString("N0") VNĐ</h5></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-success" 
                            onclick="return confirm('Xác nhận thanh toán @ViewBag.ExpectedAmountDue.ToString("N0") VNĐ?\n\nKhách sẽ có thể ở đến @reservation.CheckOutDate.ToString("dd/MM/yyyy HH:mm")\n\nLưu ý: Nếu checkout muộn hơn, hệ thống sẽ tính thêm tiền phòng theo thời gian thực tế.');">
                        <i class="fas fa-check-circle"></i> Xác nhận thanh toán
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const unitPrice = @ViewBag.UnitPrice.ToString("F0");
    const priceUnit = '@ViewBag.PriceUnit';
    const checkInTime = new Date('@ViewBag.ActualCheckInDate.ToString("yyyy-MM-ddTHH:mm:ss")');
    const deposit = @reservation.RoomBookingDeposit;
    const serviceCharge = @ViewBag.ServiceCharge;

    // Hàm tính toán và cập nhật giá
    function updatePricing() {
        const now = new Date();
        const minutesElapsed = (now - checkInTime) / 1000 / 60; // phút
        
        // Tính số đơn vị thời gian (làm tròn)
        let timeUnits;
        if (priceUnit === 'DAY') {
            timeUnits = Math.ceil(minutesElapsed / 1440);
        } else { // HOUR
            timeUnits = Math.ceil(minutesElapsed / 60);
        }
        
        if (timeUnits < 1) timeUnits = 1; 
        
        // Tính tiền phòng
        const roomCharge = unitPrice * timeUnits;
        const subTotal = roomCharge + serviceCharge;
        const taxAmount = subTotal * 0.1; 
        const totalAmount = subTotal + taxAmount;
        const amountDue = totalAmount - deposit;
        
        document.getElementById('displayTimeUnits').textContent = timeUnits;
        document.getElementById('roomChargeDisplay').textContent = Math.round(roomCharge).toLocaleString('vi-VN') + ' VNĐ';
        document.getElementById('subTotalDisplay').textContent = Math.round(subTotal).toLocaleString('vi-VN') + ' VNĐ';
        document.getElementById('taxAmountDisplay').textContent = Math.round(taxAmount).toLocaleString('vi-VN') + ' VNĐ';
        document.getElementById('totalAmountDisplay').textContent = Math.round(totalAmount).toLocaleString('vi-VN') + ' VNĐ';
        document.getElementById('amountDueDisplay').textContent = Math.round(amountDue).toLocaleString('vi-VN') + ' VNĐ';
    }

    // Cập nhật mỗi giây
    document.addEventListener("DOMContentLoaded", function() {
        updatePricing(); // Cập nhật ngay khi load
        setInterval(updatePricing, 1000); // Cập nhật mỗi 1 giây
        
        // Xử lý nút checkout
        var btn = document.getElementById('checkoutThenPayBtn');
        if (btn) {
            btn.addEventListener('click', function() {
                const confirmed = confirm('Trả phòng và thanh toán sau?\n\n' +
                    'Tiền phòng tính theo THỜI GIAN Ở THỰC TẾ:\n' +
                    '- Từ lúc nhận phòng thực tế đến hiện tại\n' +
                    'Xác nhận?');
                if (confirmed) {
                    document.getElementById('checkoutThenPayForm').submit();
                }
            });
        }
    });
</script>
}
