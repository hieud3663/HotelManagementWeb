@{
    ViewData["Title"] = "Check-out";
}

<!-- Page Header -->
<div class="page-header fade-in-up">
    <h1>
        <i class="fas fa-sign-out-alt"></i>
        Quản lý Check-out
    </h1>
    <p>Danh sách các phòng đã check-in và chờ khách trả phòng</p>
</div>

<!-- Search Form -->
<div class="card-modern fade-in-up mb-4">
    <div class="card-header-modern">
        <span><i class="fas fa-search me-2"></i>Tìm kiếm Check-out</span>
    </div>
    <div class="card-body-modern">
        <form id="searchForm" method="get" class="row g-3">
            <div class="col-md-4">
                <label for="phoneNumber" class="form-label">
                    <i class="fas fa-phone"></i> Số điện thoại
                </label>
                <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" 
                       placeholder="Nhập số điện thoại..." value="@ViewBag.PhoneNumber">
            </div>
            <div class="col-md-4">
                <label for="customerName" class="form-label">
                    <i class="fas fa-user"></i> Tên khách hàng
                </label>
                <input type="text" class="form-control" id="customerName" name="customerName" 
                       placeholder="Nhập tên khách hàng..." value="@ViewBag.CustomerName">
            </div>
            <div class="col-md-4">
                <label for="reservationId" class="form-label">
                    <i class="fas fa-hashtag"></i> Mã phiếu đặt phòng
                </label>
                <input type="text" class="form-control" id="reservationId" name="reservationId" 
                       placeholder="Nhập mã phiếu..." value="@ViewBag.ReservationId">
            </div>
            <div class="col-12">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary-modern">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary-modern">
                        <i class="fas fa-refresh"></i> Làm mới
                    </a>
                    @if (!string.IsNullOrEmpty(ViewBag.PhoneNumber) || !string.IsNullOrEmpty(ViewBag.CustomerName) || !string.IsNullOrEmpty(ViewBag.ReservationId))
                    {
                        <span class="badge-modern badge-info-modern align-self-center">
                            <i class="fas fa-filter"></i> Đang lọc kết quả
                        </span>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

