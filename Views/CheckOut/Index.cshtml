@section Scripts {
    <script>
        // Search functionality
        document.addEventListener('DOMContentLoaded', function() {
            let searchTimeout;
            const searchInputs = document.querySelectorAll('#phoneNumber, #customerName, #reservationId');
            
            searchInputs.forEach(input => {
                // Enter key ƒë·ªÉ submit ngay l·∫≠p t·ª©c
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        clearTimeout(searchTimeout);
                        document.getElementById('searchForm').submit();
                    }
                });
            });
            
            // Highlight search terms in results
            const searchTerms = [
                '@ViewBag.PhoneNumber',
                '@ViewBag.CustomerName', 
                '@ViewBag.ReservationId'
            ].filter(term => term && term !== '');
            
            if (searchTerms.length > 0) {
                searchTerms.forEach(term => {
                    const regex = new RegExp(`(${term})`, 'gi');
                    const cells = document.querySelectorAll('td');
                    cells.forEach(cell => {
                        if (cell.textContent.toLowerCase().includes(term.toLowerCase())) {
                            cell.innerHTML = cell.innerHTML.replace(regex, '<mark class="search-highlight">$1</mark>');
                        }
                    });
                });
            }
        });
        
        // Fix modal backdrop issue v√† ƒë·∫£m b·∫£o modal ho·∫°t ƒë·ªông m∆∞·ª£t m√†
        document.addEventListener('DOMContentLoaded', function() {
            // X√≥a t·∫•t c·∫£ backdrop c≈© khi t·∫£i trang
            document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
            
            // Reset body class
            document.body.classList.remove('modal-open');
            document.body.style.overflow = '';
            document.body.style.paddingRight = '';
            
            // L·∫Øng nghe s·ª± ki·ªán modal
            var modals = document.querySelectorAll('.modal');
            modals.forEach(function(modal) {
                // Khi modal ƒë∆∞·ª£c hi·ªÉn th·ªã
                modal.addEventListener('show.bs.modal', function (event) {
                    console.log('Opening modal:', this.id);
                });
                
                // Khi modal ƒë∆∞·ª£c ·∫©n
                modal.addEventListener('hidden.bs.modal', function (event) {
                    console.log('Closing modal:', this.id);
                    
                    // Cleanup: X√≥a backdrop th·ª´a
                    setTimeout(function() {
                        var backdrops = document.querySelectorAll('.modal-backdrop');
                        if (backdrops.length > 0) {
                            backdrops.forEach(function(backdrop) {
                                backdrop.remove();
                            });
                        }
                        
                        // Reset body n·∫øu kh√¥ng c√≤n modal n√†o m·ªü
                        var openModals = document.querySelectorAll('.modal.show');
                        if (openModals.length === 0) {
                            document.body.classList.remove('modal-open');
                            document.body.style.overflow = '';
                            document.body.style.paddingRight = '';
                        }
                    }, 100);
                });
                
                // X·ª≠ l√Ω l·ªói khi modal b·ªã stuck
                modal.addEventListener('hide.bs.modal', function (event) {
                    // ƒê·∫£m b·∫£o modal c√≥ th·ªÉ ƒë√≥ng
                    this.setAttribute('aria-hidden', 'true');
                });
            });
            
            // Cleanup khi click v√†o backdrop
            document.addEventListener('click', function(event) {
                if (event.target.classList.contains('modal-backdrop')) {
                    // T√¨m modal ƒëang m·ªü v√† ƒë√≥ng n√≥
                    var openModal = document.querySelector('.modal.show');
                    if (openModal) {
                        var modalInstance = bootstrap.Modal.getInstance(openModal);
                        if (modalInstance) {
                            modalInstance.hide();
                        }
                    }
                }
            });
        });
        
        // Confirm checkout with actual time calculation
        function confirmCheckout(event, type) {
            var message = type === 'checkout' 
                ? 'Tr·∫£ ph√≤ng v√† thanh to√°n sau?\n\nTi·ªÅn ph√≤ng s·∫Ω t√≠nh theo TH·ªúI GIAN TH·ª∞C T·∫æ t·ª´ check-in ƒë·∫øn checkout hi·ªán t·∫°i.'
                : 'X√°c nh·∫≠n tr·∫£ ph√≤ng?\n\nN·∫øu qu√° gi·ªù d·ª± ki·∫øn s·∫Ω t√≠nh ph√≠ ph·ª• thu.';
            
            if (!confirm(message)) {
                event.preventDefault();
                return false;
            }
            return true;
        }
    </script>
    
