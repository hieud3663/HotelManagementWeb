@model IEnumerable<HotelManagement.Models.Invoice>

@{
    ViewData["Title"] = "Quản lý Hóa đơn";
}

<!-- Page Header -->
<div class="page-header fade-in-up">
    <h1>
        <i class="fas fa-file-invoice-dollar"></i>
        Quản lý Hóa đơn
    </h1>
    <p>Danh sách các hóa đơn thanh toán trong hệ thống</p>
</div>

<!-- Statistics -->
@{
    var totalInvoices = Model.Count();
    var totalRevenue = Model.Sum(i => i.NetDue ?? 0);
    var paidInvoices = Model.Count(i => i.IsPaid);
    var unpaidInvoices = Model.Count(i => !i.IsPaid);
    var paidRevenue = Model.Where(i => i.IsPaid).Sum(i => i.NetDue ?? 0);
    var unpaidRevenue = Model.Where(i => !i.IsPaid).Sum(i => i.NetDue ?? 0);
}

<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="stats-card primary fade-in-up" style="animation-delay: 0.1s">
            <div class="stats-icon primary">
                <i class="fas fa-file-invoice"></i>
            </div>
            <div class="stats-title">TỔNG HÓA ĐƠN</div>
            <div class="stats-value">@totalInvoices</div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stats-card success fade-in-up" style="animation-delay: 0.2s">
            <div class="stats-icon success">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stats-title">ĐÃ THANH TOÁN</div>
            <div class="stats-value">@paidInvoices</div>
            <small class="text-muted d-block mt-2">@paidRevenue.ToString("N0") đ</small>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stats-card danger fade-in-up" style="animation-delay: 0.3s">
            <div class="stats-icon danger">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="stats-title">CHƯA THANH TOÁN</div>
            <div class="stats-value">@unpaidInvoices</div>
            <small class="text-muted d-block mt-2">@unpaidRevenue.ToString("N0") đ</small>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stats-card warning fade-in-up" style="animation-delay: 0.4s">
            <div class="stats-icon warning">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <div class="stats-title">TỔNG DOANH THU</div>
            <div class="stats-value" style="font-size: 1.5rem;">@totalRevenue.ToString("N0") đ</div>
        </div>
    </div>
</div>

<!-- Search Bar -->
<div class="card-modern fade-in-up mb-4" style="animation-delay: 0.3s">
    <div class="card-body-modern">
        <form method="get" class="row g-3">
            <div class="col-md-7">
                <label class="form-label-modern">Tìm kiếm</label>
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           class="form-control" 
                           placeholder="Tìm kiếm theo Mã hóa đơn, Mã phòng, Tên khách hàng..." 
                           value="@ViewBag.SearchTerm"
                           style="border-left: none;" />
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label-modern">Trạng thái thanh toán</label>
                <select name="paymentStatus" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="paid" selected="@(ViewBag.PaymentStatus == "paid")">Đã thanh toán</option>
                    <option value="unpaid" selected="@(ViewBag.PaymentStatus == "unpaid")">Chưa thanh toán</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary-modern w-100">
                    <i class="fas fa-filter"></i> Lọc
                </button>
            </div>
        </form> `\ 
    </div>
</div>

<!-- Invoice Table -->
<div class="card-modern fade-in-up" style="animation-delay: 0.5s">
    <div class="card-header-modern">
        <i class="fas fa-list me-2"></i>Danh sách Hóa đơn
    </div>
    <div class="card-body-modern">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="stats-icon info mx-auto mb-4">
                    <i class="fas fa-inbox"></i>
                </div>
                <h4 class="text-muted mb-3">Chưa có hóa đơn nào</h4>
                <p class="text-muted">Các hóa đơn sẽ được tạo tự động sau khi check-out</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table-modern mb-0">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag"></i> Mã HĐ</th>
                            <th><i class="fas fa-receipt"></i> Mã ĐP</th>
                            <th><i class="fas fa-user"></i> Khách hàng</th>
                            <th><i class="fas fa-calendar"></i> Ngày tạo</th>
                            <th><i class="fas fa-bed"></i> Tiền phòng</th>
                            <th><i class="fas fa-concierge-bell"></i> Tiền DV</th>
                            <th><i class="fas fa-calculator"></i> Tổng tiền</th>
                            <th><i class="fas fa-info-circle"></i> Trạng thái</th>
                            <th><i class="fas fa-credit-card"></i> Thanh toán</th>
                            <th><i class="fas fa-cog"></i> Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(i => i.InvoiceDate))
                        {
                            <tr>
                                <td><strong class="text-primary">#@item.InvoiceID</strong></td>
                                <td><strong>@item.ReservationFormID</strong></td>
                                <td>@item.ReservationForm?.Customer?.FullName</td>
                                <td>@item.InvoiceDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.RoomCharge.ToString("N0") đ</td>
                                <td>@item.ServicesCharge.ToString("N0") đ</td>
                                <td>
                                    <strong class="text-success">@((item.TotalAmount ?? item.NetDue ?? 0).ToString("N0")) đ</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CheckoutType))
                                    {
                                        @if (item.CheckoutType == "CHECKOUT_THEN_PAY")
                                        {
                                            <span class="badge-modern badge-warning-modern" title="Trả phòng rồi thanh toán">
                                                <i class="fas fa-sign-out-alt"></i> Checkout → Pay
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge-modern badge-info-modern" title="Thanh toán trước">
                                                <i class="fas fa-money-bill-wave"></i> Pay → Checkout
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-secondary-modern">
                                            <i class="fas fa-file-invoice"></i> Legacy
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsPaid)
                                    {
                                        <span class="badge-modern badge-success-modern">
                                            <i class="fas fa-check-circle"></i> Đã thanh toán
                                        </span>
                                        @if (item.PaymentDate.HasValue)
                                        {
                                            <br /><small class="text-muted">@item.PaymentDate.Value.ToString("dd/MM HH:mm")</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-danger-modern">
                                            <i class="fas fa-exclamation-circle"></i> Chưa hoàn tất
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Invoice" asp-route-id="@item.InvoiceID" 
                                           class="btn btn-info-modern btn-sm" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        
                                        @if (!item.IsPaid)
                                        {
                                            <a asp-controller="CheckOut" asp-action="Payment" asp-route-invoiceID="@item.InvoiceID"
                                               class="btn btn-success-modern btn-sm" title="Thanh toán ngay">
                                                <i class="fas fa-credit-card"></i>
                                            </a>
                                        }
                                        
                                        <a asp-action="Invoice" asp-route-id="@item.InvoiceID" 
                                           class="btn btn-warning-modern btn-sm" title="In hóa đơn" target="_blank">
                                            <i class="fas fa-print"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
