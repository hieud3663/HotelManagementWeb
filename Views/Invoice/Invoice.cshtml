@model HotelManagement.Models.Invoice

@{
    ViewData["Title"] = "Hóa đơn";
    var reservation = Model.ReservationForm;
    var customer = reservation?.Customer;
    var room = reservation?.Room;
    var checkIn = reservation?.HistoryCheckin;
    var checkOut = reservation?.HistoryCheckOut;
    var services = reservation?.RoomUsageServices ?? new List<HotelManagement.Models.RoomUsageService>();
    
    var roomCharge = Model.RoomCharge;
    var servicesCharge = Model.ServicesCharge;
    @* var surcharge = Model.; *@
    @* var discount = Model.Discount; *@
    var subTotal = roomCharge + servicesCharge;
    @* var subTotal = roomCharge + servicesCharge + surcharge - discount; *@
    var taxAmount = subTotal * 0.1m; // VAT 10%
    var netDue = Model.NetDue ?? (subTotal + taxAmount);
    var deposit = (decimal)(reservation?.RoomBookingDeposit ?? 0);
    var amountDue = netDue - deposit;
}

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        #printarea, #printarea * {
            visibility: visible;
        }
        #printarea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .no-print {
            display: none !important;
        }
    }
</style>

<div class="container-modern no-print">
    <div class="header-modern">
        <h2><i class="fas fa-file-invoice me-2"></i>Hóa đơn thanh toán</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb-modern">
                <li class="breadcrumb-item-modern"><a asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item-modern"><a asp-action="Index">Hóa đơn</a></li>
                <li class="breadcrumb-item-modern active">Chi tiết</li>
            </ol>
        </nav>
    </div>

    <div class="mb-3 no-print">
        <button onclick="window.print()" class="btn btn-primary-modern">
            <i class="fas fa-print"></i> In hóa đơn
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div id="printarea" class="container" style="max-width: 800px; margin: 0 auto; padding: 20px; background: white;">
    <!-- Header -->
    <div style="text-align: center; border-bottom: 3px solid #333; padding-bottom: 20px; margin-bottom: 30px;">
        <h1 style="color: #2c3e50; margin-bottom: 5px;">HỆ THỐNG QUẢN LÝ KHÁCH SẠN</h1>
        <p style="color: #7f8c8d; margin: 0;">Địa chỉ: 123 Đường ABC, Quận XYZ, TP.HCM</p>
        <p style="color: #7f8c8d; margin: 0;">Điện thoại: (028) 1234 5678 | Email: info@hotel.com</p>
    </div>

    <!-- Invoice Title -->
    <div style="text-align: center; margin-bottom: 30px;">
        <h2 style="color: #e74c3c; margin: 0; font-size: 28px;">HÓA ĐƠN THANH TOÁN</h2>
        <p style="color: #7f8c8d; margin-top: 10px;">Mã hóa đơn: <strong>@Model.InvoiceID</strong></p>
        <p style="color: #7f8c8d; margin: 0;">Ngày: <strong>@Model.InvoiceDate.ToString("dd/MM/yyyy HH:mm")</strong></p>
    </div>

    <!-- Customer & Room Info -->
    <div style="display: table; width: 100%; margin-bottom: 30px;">
        <div style="display: table-cell; width: 50%; padding-right: 20px;">
            <h4 style="color: #2c3e50; border-bottom: 2px solid #3498db; padding-bottom: 10px;">Thông tin khách hàng</h4>
            <table style="width: 100%; margin-top: 15px;">
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Họ tên:</td>
                    <td style="padding: 5px 0;"><strong>@customer?.FullName</strong></td>
                </tr>
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Điện thoại:</td>
                    <td style="padding: 5px 0;">@customer?.PhoneNumber</td>
                </tr>
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Email:</td>
                    <td style="padding: 5px 0;">@customer?.Email</td>
                </tr>
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">CCCD:</td>
                    <td style="padding: 5px 0;">@customer?.IdCardNumber</td>
                </tr>
            </table>
        </div>
        <div style="display: table-cell; width: 50%; padding-left: 20px; border-left: 1px solid #ddd;">
            <h4 style="color: #2c3e50; border-bottom: 2px solid #27ae60; padding-bottom: 10px;">Thông tin phòng</h4>
            <table style="width: 100%; margin-top: 15px;">
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Mã phòng:</td>
                    <td style="padding: 5px 0;"><strong style="color: #27ae60;">@room?.RoomID</strong></td>
                </tr>
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Loại phòng:</td>
                    <td style="padding: 5px 0;">@room?.RoomCategory?.RoomCategoryName</td>
                </tr>
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Check-in:</td>
                    <td style="padding: 5px 0;">@checkIn?.CheckInDate.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
                <tr>
                    <td style="padding: 5px 0; color: #7f8c8d;">Check-out:</td>
                    <td style="padding: 5px 0;">@checkOut?.CheckOutDate.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            </table>
        </div>
    </div>

    <!-- Services Table -->
    @if (services.Any())
    {
        <h4 style="color: #2c3e50; border-bottom: 2px solid #9b59b6; padding-bottom: 10px; margin-bottom: 15px;">Chi tiết dịch vụ</h4>
        <table style="width: 100%; border-collapse: collapse; margin-bottom: 30px;">
            <thead>
                <tr style="background-color: #f8f9fa;">
                    <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Dịch vụ</th>
                    <th style="border: 1px solid #ddd; padding: 12px; text-align: center; width: 100px;">Số lượng</th>
                    <th style="border: 1px solid #ddd; padding: 12px; text-align: right; width: 120px;">Đơn giá</th>
                    <th style="border: 1px solid #ddd; padding: 12px; text-align: right; width: 140px;">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in services)
                {
                    var totalPrice = service.Quantity * service.UnitPrice;
                    <tr>
                        <td style="border: 1px solid #ddd; padding: 10px;">@service.HotelService?.ServiceName</td>
                        <td style="border: 1px solid #ddd; padding: 10px; text-align: center;">@service.Quantity</td>
                        <td style="border: 1px solid #ddd; padding: 10px; text-align: right;">@service.UnitPrice.ToString("N0") đ</td>
                        <td style="border: 1px solid #ddd; padding: 10px; text-align: right;"><strong>@totalPrice.ToString("N0") đ</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- Payment Summary -->
    <div style="background-color: #ecf0f1; padding: 20px; border-radius: 8px;">
        <h4 style="color: #2c3e50; margin-top: 0; margin-bottom: 20px;">Tổng kết thanh toán</h4>
        <table style="width: 100%; font-size: 14px;">
            <tr>
                <td style="padding: 8px 0;">Tiền phòng:</td>
                <td style="padding: 8px 0; text-align: right;">@Math.Round(roomCharge, 0).ToString("N0") đ</td>
            </tr>
            <tr>
                <td style="padding: 8px 0;">Tiền dịch vụ:</td>
                <td style="padding: 8px 0; text-align: right;">@Math.Round(servicesCharge, 0).ToString("N0") đ</td>
            </tr>
            @* @if (surcharge > 0)
            {
                <tr>
                    <td style="padding: 8px 0;">Phụ thu:</td>
                    <td style="padding: 8px 0; text-align: right;">@Math.Round(surcharge, 0).ToString("N0") đ</td>
                </tr>
            } *@
            @* @if (discount > 0)
            {
                <tr>
                    <td style="padding: 8px 0;">Giảm giá:</td>
                    <td style="padding: 8px 0; text-align: right; color: #e74c3c;">-@Math.Round(discount, 0).ToString("N0") đ</td>
                </tr>
            } *@
            <tr style="border-top: 1px solid #bdc3c7;">
                <td style="padding: 8px 0; padding-top: 12px;"><strong>Tạm tính:</strong></td>
                <td style="padding: 8px 0; padding-top: 12px; text-align: right;"><strong>@Math.Round(subTotal, 0).ToString("N0") đ</strong></td>
            </tr>
            <tr>
                <td style="padding: 8px 0;">VAT (10%):</td>
                <td style="padding: 8px 0; text-align: right;">@Math.Round(taxAmount, 0).ToString("N0") đ</td>
            </tr>
            <tr style="border-top: 2px solid #2c3e50;">
                <td style="padding: 12px 0; font-size: 16px;"><strong>Tổng cộng:</strong></td>
                <td style="padding: 12px 0; text-align: right; font-size: 18px; color: #27ae60;"><strong>@Math.Round(netDue, 0).ToString("N0") đ</strong></td>
            </tr>
            <tr style="background-color: #fff; border-top: 1px solid #bdc3c7;">
                <td style="padding: 8px 0; padding-top: 12px;">Đã đặt cọc:</td>
                <td style="padding: 8px 0; padding-top: 12px; text-align: right;">@Math.Round(deposit, 0).ToString("N0") đ</td>
            </tr>
            <tr style="border-top: 3px double #2c3e50;">
                <td style="padding: 12px 0; font-size: 18px;"><strong style="color: #e74c3c;">Còn phải thanh toán:</strong></td>
                <td style="padding: 12px 0; text-align: right; font-size: 22px; color: #e74c3c;"><strong>@Math.Round(amountDue, 0).ToString("N0") đ</strong></td>
            </tr>
        </table>
    </div>

    <!-- Footer -->
    <div style="margin-top: 50px; text-align: center;">
        <div style="display: table; width: 100%; margin-top: 40px;">
            <div style="display: table-cell; width: 50%; text-align: center;">
                <p style="margin: 0; color: #7f8c8d;">Nhân viên thu ngân</p>
                <p style="margin: 60px 0 5px 0; font-style: italic; color: #bdc3c7;">(Ký và ghi rõ họ tên)</p>
            </div>
            <div style="display: table-cell; width: 50%; text-align: center;">
                <p style="margin: 0; color: #7f8c8d;">Khách hàng</p>
                <p style="margin: 60px 0 5px 0; font-style: italic; color: #bdc3c7;">(Ký và ghi rõ họ tên)</p>
            </div>
        </div>
    </div>

    <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #ddd; text-align: center; color: #7f8c8d; font-size: 12px;">
        <p style="margin: 0;">Cảm ơn quý khách đã sử dụng dịch vụ của chúng tôi!</p>
        <p style="margin: 5px 0 0 0;">Hẹn gặp lại quý khách trong những lần tiếp theo.</p>
    </div>
</div>
