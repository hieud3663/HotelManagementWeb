@{
    ViewData["Title"] = "Tạo tài khoản Lễ tân";
}

<div class="page-header fade-in-up">
    <h1><i class="fas fa-user-plus"></i> Tạo tài khoản Lễ tân</h1>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card-modern">
    <div class="card-body-modern">
        <form method="post" asp-action="Create">
            <div class="mb-3">
                <label class="form-label-modern">Nhân viên</label>
                <select name="employeeId" class="form-select">
                    <option value="">-- Chọn nhân viên --</option>
                    @foreach (var e in (IEnumerable<dynamic>)ViewBag.ActiveEmployees)
                    {
                        <option value="@e.EmployeeID">@e.FullName (@e.EmployeeID)</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label-modern">Username</label>
                <input type="text" name="username" class="form-control-modern" />
            </div>
            <div class="mb-3">
                <label class="form-label-modern">Mật khẩu</label>
                <input type="password" name="password" class="form-control-modern" />
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary-modern"><i class="fas fa-save"></i> Lưu</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>


