@model HotelManagement.Models.Room

@{
    ViewData["Title"] = "Chỉnh sửa Phòng";
}

<!-- Page Header -->
<div class="page-header fade-in-up">
    <h1>
        <i class="fas fa-edit"></i>
        Chỉnh sửa Phòng
    </h1>
    <p>Cập nhật thông tin phòng @Model.RoomID</p>
</div>

<div class="card-modern fade-in-up">
    <div class="card-header-modern">
        <i class="fas fa-edit me-2"></i>Thông tin Phòng
    </div>
    <div class="card-body-modern">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RoomID" />
            <input type="hidden" asp-for="DateOfCreation" />

            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label-modern">
                        <i class="fas fa-tag"></i> Loại phòng
                    </label>
                    <select asp-for="RoomCategoryID" class="form-control-modern" asp-items='(SelectList)ViewData["RoomCategoryID"]'>
                        <option value="">-- Chọn loại phòng --</option>
                    </select>
                    <span asp-validation-for="RoomCategoryID" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label-modern">
                        <i class="fas fa-info-circle"></i> Trạng thái phòng
                    </label>
                    <select asp-for="RoomStatus" class="form-control-modern">
                        <option value="AVAILABLE">Phòng trống</option>
                        <option value="ON_USE">Đang sử dụng</option>
                        <option value="RESERVED">Đã đặt</option>
                        <option value="MAINTENANCE">Bảo trì</option>
                    </select>
                    <span asp-validation-for="RoomStatus" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label-modern">
                        <i class="fas fa-toggle-on"></i> Trạng thái hoạt động
                    </label>
                    <select asp-for="IsActivate" class="form-control-modern">
                        <option value="ACTIVATE">Hoạt động</option>
                        <option value="DEACTIVATE">Vô hiệu hóa</option>
                    </select>
                </div>
            </div>

            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-warning-modern">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
